{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "airbnb"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "no-loops",
    "sort-class-members"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    // POSSIBLE ERRORS
    "no-console": 0,
    "no-extra-parens": [
      2,
      "functions"
    ],
    // BEST PRACTICES
    "complexity": [
      2,
      40
    ],
    "no-useless-call": 2,
    "class-methods-use-this": 0,
    // VARIABLES
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "none"
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "variables": false,
        "classes": true
      }
    ],
    // STYLISTIC ISSUES
    "linebreak-style": [
      0,
      "windows"
    ],
    "newline-after-var": [
      1,
      "always"
    ],
    "camelcase": [
      2,
      {
        "properties": "always"
      }
    ],
    "comma-dangle": [
      2,
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore"
      }
    ],
    "func-style": [
      2,
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "max-len": [
      2,
      256,
      4,
      {
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignorePattern": "^\\s*(const|let|var)\\s+\\w+\\s+\\=\\s+\\/.*\\/(|i|g|m|ig|im|gm|igm);?$"
      }
    ],
    "max-nested-callbacks": [
      2,
      4
    ],
    "max-params": [
      2,
      5
    ],
    "no-unneeded-ternary": 2,
    "no-bitwise": 2,
    // NODE.JS
    "callback-return": 2,
    "global-require": 0,
    "no-mixed-requires": 2,
    "no-path-concat": 2,
    "handle-callback-err": 1,
    "no-sync": 0,
    // REACT
    "react/no-unused-prop-types": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    ],
    "react/prefer-stateless-function": [
      0,
      {
        "ignorePureComponents": true
      }
    ],
    "react/forbid-prop-types": [
      1,
      {
        "forbid": [
          "any"
        ]
      }
    ],
    "react/jsx-handler-names": 1,
    "react/jsx-key": 2,
    "react/sort-comp": 0,
    "sort-class-members/sort-class-members": [
      2,
      {
        "accessorPairPositioning": "any",
        "order": [
          "propTypes",
          "defaultProps",
          "state",
          "fastState",
          "[static-properties]",
          "[static-methods]",
          "constructor",
          "[properties]",
          "[lifecycle]",
          "/^handle.+$/",
          "/^(get|set|update)(?!(InitialState$|DefaultProps$|ChildContext$)).+$/",
          "[arrow-function-properties]",
          "[everything-else]",
          "/^render.+$/",
          "render"
        ],
        "groups": {
          "lifecycle": [
            "componentWillMount",
            "componentDidMount",
            "componentWillReceiveProps",
            "shouldComponentUpdate",
            "componentWillUpdate",
            "componentDidUpdate",
            "componentWillUnmount"
          ]
        }
      }
    ],
    "react/jsx-max-props-per-line": [
      2,
      {
        "maximum": 1,
        "when": "multiline"
      }
    ],
    "react/jsx-closing-tag-location": 2,
    "react/sort-prop-types": [
      "warn",
      {
        "ignoreCase": true,
        "callbacksLast": true,
        "requiredFirst": true
      }
    ],
    "react/jsx-sort-props": [
      "warn",
      {
        "callbacksLast": true,
        "shorthandFirst": true,
        "shorthandLast": false,
        "ignoreCase": true,
        "noSortAlphabetically": true,
        "reservedFirst": [
          "key",
          "ref"
        ]
      }
    ],
    "react/no-danger": 2,
    "react/no-direct-mutation-state": 2,
    "react/no-string-refs": 1,
    "react/prop-types": [
      2,
      {
        "ignore": [
          "dispatch"
        ],
        "skipUndeclared": true
      }
    ],
    "react/no-array-index-key": 0,
    // JSX-A11Y
    "jsx-a11y/no-noninteractive-element-interactions": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    // IMPORT
    "import/no-extraneous-dependencies": 0,
    "import/extensions": [
      2,
      {
        "js": "never",
        "jsx": "never",
        "json": "always"
      }
    ],
    "import/first": [
      "off",
      "absolute-first"
    ],
    "import/no-unresolved": [
      "error",
      {
        "ignore": [
          "^@"
        ]
      }
    ],
    // OTHER
    "no-loops/no-loops": 1
  },
  "settings": {
    "import/resolver": {
      "babel-module": {},
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  },
  "globals": {
    "ga": true,
    "Roles": true,
    "__DEV__": true,
    "__PROD__": true
  }
}
